Zadanie 1.4.1

int main()
{

  printf("Podaj n:");
  scanf("%d",&n);

  printf("Podaj m:");
  scanf("%d",&m);

  for(int i = 0; i<m; i++)
  {
      int wk = i+1;

      printf("%d", n*wk);

  }
  
  Zadanie 1.4.2
  
  int main()
{
  int n, m, k;


    printf("Podaj n:");
  scanf("%d",&n);

  printf("Podaj m:");
  scanf("%d",&m);

  printf("Podaj k:");
  scanf("%d",&k);

  for(int i=1;n*i>m&&n*i<k;i++)
    printf("%d", i*n);


    return 0;
}

Zadanie 1.4.3
int main()
{
  int n;
  int silnia = 1;


    printf("Podaj n:");
  scanf("%d",&n);

  for(int i =1;i<=n;i++)
  {
      silnia=silnia*i;
      printf("%d", silnia);

  }



    return 0;
}

Zadanie 1.4.4

int main()
{
  int n;
  int suma = 0;

  printf("Podaj n:");
  scanf("%d",&n);

  for(int i =0; i<=n; i++)
  {
      suma = suma + i*i;

      printf("%d", suma);

  }



    return 0;
}

